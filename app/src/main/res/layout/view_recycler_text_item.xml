<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/view_recycler_item_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_test_viedo" />
    <RelativeLayout
        android:id="@+id/view_recycler_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/view_recycler_item_TopTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="2dp"
            android:paddingTop="2dp"
            android:text="@string/test_item_text"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/view_recycler_item_time"
            style="@style/ItemCardViewStyle.text.time"
            android:text="2017年2月22日 11:47:52" />

        <TextView
            android:id="@+id/view_recycler_item_review"
            style="@style/ItemCardViewStyle.text.review"
            android:text="112评论" />

        <TextView
            android:id="@+id/view_recycler_item_contentText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_recycler_item_TopTextView"
            android:layout_above="@id/view_recycler_item_review"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/test_item_content"
            android:textColor="@color/color_gray"
            android:textSize="10sp" />

    </RelativeLayout>

    <include
        layout="@layout/view_preference"/>
</android.support.v7.widget.CardView>