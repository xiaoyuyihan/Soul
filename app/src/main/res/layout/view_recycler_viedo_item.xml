<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    style="@style/ItemCardViewStyle">

    <ImageView
        android:id="@+id/view_recycler_item_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_test_viedo" />
    <SurfaceView
        android:id="@+id/view_recycler_item_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/view_recycler_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/view_recycler_item_TopTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:padding="2dp"
            android:paddingTop="2dp"
            android:text="@string/test_item_text"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/view_recycler_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="2017年2月22日 11:47:52"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/view_recycler_item_review"
            style="@style/ItemCardViewStyle.text.review"
            android:visibility="gone"
            android:text="112评论" />

        <ImageView
            android:id="@+id/view_recycler_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_round_border"
            app:srcCompat="@android:drawable/ic_media_play" />
    </RelativeLayout>
<include
    layout="@layout/view_preference"/>
</android.support.v7.widget.CardView>